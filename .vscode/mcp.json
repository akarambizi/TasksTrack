{
    "servers": {
        "shadcn": {
            "command": "npx",
            "args": ["shadcn@latest", "mcp"]
        },
        "playwright": {
            "command": "npx",
            "args": ["-y", "@executeautomation/playwright-mcp-server@latest"]
        },
        "chrome-devtools": {
            "command": "npx",
            "args": ["-y", "chrome-devtools-mcp@latest"]
        },
        "browser-automation": {
            "command": "npx",
            "args": ["-y", "@modelcontextprotocol/server-browser-automation@latest"]
        }
    }
}
